<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorfonfo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.usuario.calculadora.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:inputType="number"
        android:ems="12"
        android:id="@+id/edtver"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:layout_alignEnd="@+id/btdivi"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt1"
        android:text="1"
        android:layout_below="@+id/btsum"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt4"
        android:layout_above="@+id/bt1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bt1"
        android:text="4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt7"
        android:layout_above="@+id/bt4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bt4"
        android:text="7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btsum"
        android:text="+"
        android:layout_below="@+id/bt9"
        android:layout_toEndOf="@+id/bt3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt2"
        android:layout_below="@+id/bt4"
        android:layout_toEndOf="@+id/bt1"
        android:text="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt5"
        android:layout_above="@+id/bt2"
        android:layout_alignEnd="@+id/bt2"
        android:layout_toEndOf="@+id/bt1"
        android:text="5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt8"
        android:layout_above="@+id/bt5"
        android:layout_toEndOf="@+id/bt4"
        android:text="8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt3cu"
        android:text="^3"
        android:layout_below="@+id/btln"
        android:layout_alignStart="@+id/btln" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt3"
        android:layout_below="@+id/bt5"
        android:layout_toEndOf="@+id/bt2"
        android:text="3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt6"
        android:layout_below="@+id/bt8"
        android:layout_alignStart="@+id/bt3"
        android:text="6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt9"
        android:layout_below="@+id/bt3cu"
        android:layout_alignStart="@+id/bt6"
        android:text="9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btr2cu"
        android:text="¬2"
        android:layout_below="@+id/btln"
        android:layout_toStartOf="@+id/btln" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt0"
        android:layout_below="@+id/bt2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bt2"
        android:text="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt2cu"
        android:layout_alignTop="@+id/bt3cu"
        android:layout_alignStart="@+id/bt9"
        android:text="^2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btres"
        android:text="-"
        android:layout_alignTop="@+id/bt9"
        android:layout_toEndOf="@+id/bt6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btmulti"
        android:text="*"
        android:layout_above="@+id/bt8"
        android:layout_toEndOf="@+id/bt2cu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btdivi"
        android:text="/"
        android:layout_alignTop="@+id/btfac"
        android:layout_toEndOf="@+id/bt2cu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btlim"
        android:layout_below="@+id/bt3"
        android:layout_toStartOf="@+id/btsum"
        android:text="C" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btr"
        android:layout_below="@+id/btsum"
        android:layout_alignParentEnd="true"
        android:text="="
        android:layout_alignBottom="@+id/btlim" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btln"
        android:text="ln"
        android:layout_alignTop="@+id/btr3cu"
        android:layout_toStartOf="@+id/btfac" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btr3cu"
        android:text="¬3"
        android:layout_below="@+id/edtver"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btfac"
        android:text="f"
        android:layout_alignTop="@+id/btln"
        android:layout_toStartOf="@+id/btdivi" />

</RelativeLayout>
